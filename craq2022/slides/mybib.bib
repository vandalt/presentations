	note = {ADS Bibcode: 2021AJ....162...73P},
	keywords = {1858, 2021, 2095, 2096, 487, 495, 799, Astronomical instrumentation, Astronomy data analysis, Astrophysics - Earth and Planetary Astrophysics, Exoplanet atmospheres, Exoplanet atmospheric composition, Exoplanet structure, High resolution spectroscopy, Molecular spectroscopy},
