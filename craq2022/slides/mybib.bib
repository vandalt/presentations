@misc{noauthor_peter_2020,
	title = {Peter {Gao}: {Lifting} the {Veil} on {Exoplanet} {Clouds} and {Hazes} in the {Next} {Decade}},
	shorttitle = {Peter {Gao}},
	url = {https://www.youtube.com/watch?v=7PfLSp2w98I&ab_channel=Exoplanets3},
	abstract = {Clouds and hazes have plagued the interpretation of exoplanet transmission and emission spectra and phase curves since the beginnings of exoplanet atmospheric investigations, and thus understanding the impact of these aerosols on observations is vital for revealing atmospheric composition, thermal structure, and dynamics. Aerosols in exoplanet atmospheres are difficult to characterize due to several major uncertainties, including their composition, formation pathway, and spatial and size distribution. While simplified aerosol models can be used to obtain relatively good fits to data, many of these properties are either ignored or treated as free parameters such that the results lack physical insights. In the last several years we have developed an aerosol microphysics model for exoplanets in response to this problem that calculates rates of aerosol nucleation, condensation, evaporation, coagulation, and transport, such that the spatial and size distribution of exoplanet aerosols can be computed from first principles given compositions predicted from equilibrium condensation models and assumed formation pathways. In this talk, I will describe our major results, including (1) successfully fitting the cloudiness of hot and warm Jupiters across a wide swath of temperatures and gravities, showing that silicate clouds and photochemical hazes dominate the aerosol opacity of these worlds, (2) predictions of which planets should exhibit the largest amplitude silicate feature at 10 microns, a key test of exoplanet aerosol composition, (3) revealing how high temperature clouds vary with longitude and latitude, and (4) how photochemical hazes impact observations of the radii and transmission spectra of mini-Neptunes. I will also describe the laboratory studies and observational tests that will be necessary in the next decade to better characterize exoplanet aerosols and improve interpretations of exoplanet atmospheric observations.},
	urldate = {2020-11-04},
	month = aug,
	year = {2020},
}

