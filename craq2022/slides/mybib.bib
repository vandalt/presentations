@article{benneke_spitzer_2017,
	title = {\textit{{SPITZER}} {OBSERVATIONS} {CONFIRM} {AND} {RESCUE} {THE} {HABITABLE}-{ZONE} {SUPER}-{EARTH} {K2}-18b {FOR} {FUTURE} {CHARACTERIZATION}},
