	year = {2018},
	doi = {10.1007/978-3-319-55333-7_31},
	pages = {2627--2644},
	file = {Anglada-Escude et al_2018_Proxima b.pdf:/home/vandal/Documents/Zotfiles/Anglada-Escude et al_2018_Proxima b.pdf:application/pdf},
