	journal = {Astronomy and Astrophysics},
	author = {Lagrange, A.-M. and Plazy, F. and Beust, H. and Mouillet, D. and Deleuil, M. and Ferlet, R. and Spyromilio, J. and Vidal-Madjar, A. and Tobin, W. and Hearnshaw, J. B. and Clark, M. and Thomas, K. W.},
