	author = {Martinache, Frantz and Ceau, Alban and Laugier, Romain and Kammerer, Jens and N'Diaye, Mamadou and Mary, David and Cvetojevic, Nick and Lopez, Coline},
	month = apr,
	year = {2020},
	pages = {A72},
	file = {Martinache et al_2020_Kernel-phase analysis.pdf:/home/vandal/Documents/Zotfiles/Martinache et al_2020_Kernel-phase analysis.pdf:application/pdf;Snapshot:/home/vandal/Zotero/storage/ZF53RKDJ/abstract.html:text/html},
