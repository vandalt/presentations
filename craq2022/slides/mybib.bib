@article{stolker_miracles_2020,
	title = {{MIRACLES}: atmospheric characterization of directly imaged planets and substellar companions at 4-5 μm. {I}. {Photometric} analysis of β {Pic} b, {HIP} 65426 b, {PZ} {Tel} {B}, and {HD} 206893 {B}},
	volume = {635},
