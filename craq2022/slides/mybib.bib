	title = {Direct {Spectral} {Detection}: {An} {Efficient} {Method} to {Detect} and {Characterize} {Binary} {Systems}},
	volume = {151},
	issn = {0004-6256},
	shorttitle = {Direct {Spectral} {Detection}},
