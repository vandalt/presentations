@article{nelson_run_2013,
	title = {{RUN} {DMC}: {AN} {EFFICIENT}, {PARALLEL} {CODE} {FOR} {ANALYZING} {RADIAL} {VELOCITY} {OBSERVATIONS} {USING} \textit{{N}} -{BODY} {INTEGRATIONS} {AND} {DIFFERENTIAL} {EVOLUTION} {MARKOV} {CHAIN} {MONTE} {CARLO}},
