	note = {arXiv: 1711.01318},
	file = {arXiv.org Snapshot:/home/vandal/Zotero/storage/GJK9RI5S/1711.html:text/html;Jones et al_2017_Improving Exoplanet Detection Power.pdf:/home/vandal/Documents/Zotfiles/Jones et al_2017_Improving Exoplanet Detection Power.pdf:application/pdf},
