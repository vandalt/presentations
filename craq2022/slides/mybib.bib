	author = {Benedict, G. F. and McArthur, B. E. and Forveille, T. and Delfosse, X. and Nelan, E. and Butler, R. P. and Spiesman, W. and Marcy, G. and Goldman, B. and Perrier, C. and Jefferys, W. H. and Mayor, M.},
