	note = {arXiv: 1801.09569},
	keywords = {Astrophysics - Earth and Planetary Astrophysics},
	pages = {A16},
	file = {arXiv.org Snapshot:/home/vandal/Zotero/storage/UTREYNCA/1801.html:text/html;Brogi et al_2018_Exoplanet atmospheres with GIANO.pdf:/home/vandal/Documents/Zotfiles/Brogi et al_2018_Exoplanet atmospheres with GIANO3.pdf:application/pdf},
}

