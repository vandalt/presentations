@article{benedict_mass_2002,
	title = {A {Mass} for the {Extrasolar} {Planet} {Gliese} 876[{CLC}]b[/{CLC}] {Determined} from [{ITAL}]{Hubble} {Space} {Telescope}[/{ITAL}] {Fine} {Guidance} {Sensor} 3 {Astrometry} and {High}-{Precision} {Radial} {Velocities}},
