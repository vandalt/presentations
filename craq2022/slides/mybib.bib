	number = {2},
	urldate = {2019-05-10},
	journal = {The Astrophysical Journal},
	author = {Nielsen, Eric L. and Liu, Michael C. and Wahhaj, Zahed and Biller, Beth A. and Hayward, Thomas L. and Males, Jared R. and Close, Laird M. and Morzinski, Katie M. and Skemer, Andrew J. and Kuchner, Marc J. and Rodigas, Timothy J. and Hinz, Philip M. and Chun, Mark and Ftaclas, Christ and Toomey, Douglas W.},
