@article{chauvin_orbital_2012,
	title = {Orbital characterization of the β {Pictoris} b giant planet},
	volume = {542},
	copyright = {© ESO, 2012},
	issn = {0004-6361, 1432-0746},
	url = {https://www.aanda.org/articles/aa/abs/2012/06/aa18346-11/aa18346-11.html},
	doi = {10.1051/0004-6361/201118346},
	abstract = {{\textless}i{\textgreater}Context.{\textless}i/{\textgreater} In June 2010, we confirmed the existence of a giant planet in the disk of the young star {\textless}i{\textgreater}β{\textless}i/{\textgreater}Pictoris located between 8 AU and 15 AU from the star. This young planet offers the rare opportunity to monitor a large fraction of the orbit using the imaging technique over a reasonably short timescale. It also offers the opportunity to study its atmospheric properties using spectroscopy and multi-band photometry, and possibly derive its dynamical mass by combining imaging with radial velocity data to set tight constraints on giant planet formation theories.{\textless}i{\textgreater}Aims.{\textless}i/{\textgreater} We aim to measure the evolution of the planet’s position relative to the star {\textless}i{\textgreater}β{\textless}i/{\textgreater}Pictoris to determine the planetary orbital properties. Our ultimate goal is to relate both the planetary orbital configuration and physical properties to either the disk structure or the cometary activity observed for decades in the {\textless}i{\textgreater}β{\textless}i/{\textgreater}Pictoris system.{\textless}i{\textgreater}Methods.{\textless}i/{\textgreater} Using the NAOS-CONICA adaptive-optics instrument (NACO) at the Very Large Telescope (VLT), we obtained repeated follow-up images of the {\textless}i{\textgreater}β{\textless}i/{\textgreater}Pictoris system in the {\textless}i{\textgreater}K{\textless}i/{\textgreater}{\textless}sub{\textgreater}s{\textless}sub/{\textgreater} and {\textless}i{\textgreater}L{\textless}i/{\textgreater}′ filters at four new epochs in 2010 and 2011. Complementing these data with previous measurements, we conduct a homogeneous analysis, which covers more than eight yrs, to accurately monitor the {\textless}i{\textgreater}β{\textless}i/{\textgreater}Pictoris b position relative to the star. We then carefully consider the various sources of uncertainties that may affect the orbital parameter determination.{\textless}i{\textgreater}Results.{\textless}i/{\textgreater} On the basis of the evolution of the planet’s relative position with time, we derive the best-fit orbital solutions for our measurements using two fitting methods, a least squares Levenberg-Marquardt algorithm and a Markov-chain Monte Carlo approach. More reliable results are found with the second approach as our measurements do not cover the complete planetary orbit, and are biased toward the most recent epochs since the planet recovery. The solutions favor a low-eccentricity orbit {\textless}i{\textgreater}e{\textless}i/{\textgreater} ≲ 0.17, with semi-major axis in the range 8–9 AU corresponding to orbital periods of 17–21 yrs. Our solutions favor a highly inclined solution with a peak around {\textless}i{\textgreater}i{\textless}i/{\textgreater} = 88.5 ± 1.7°, and a longitude of ascending node tightly constrained at Ω = −147.5 ± 1.5°. These results indicate that the orbital plane of the planet is likely to be above the midplane of the main disk, and compatible with the warp component of the disk being tilted between 3.5 deg and 4.0 deg. This suggests that the planet plays a key role in the origin of the inner warped-disk morphology of the {\textless}i{\textgreater}β{\textless}i/{\textgreater} Pic disk. Finally, these orbital parameters are consistent with the hypothesis that the planet is responsible for the transit-like event observed in November 1981, and also linked to the cometary activity observed in the {\textless}i{\textgreater}β{\textless}i/{\textgreater} Pic system.},
	language = {en},
	urldate = {2019-05-09},
	journal = {Astronomy \& Astrophysics},
	author = {Chauvin, G. and Lagrange, A.-M. and Beust, H. and Bonnefoy, M. and Boccaletti, A. and Apai, D. and Allard, F. and Ehrenreich, D. and Girard, J. H. V. and Mouillet, D. and Rouan, D.},
	month = jun,
	year = {2012},
	pages = {A41},
	file = {Chauvin et al_2012_Orbital characterization of the β Pictoris b giant planet.pdf:/home/vandal/Documents/Zotfiles/Chauvin et al_2012_Orbital characterization of the β Pictoris b giant planet.pdf:application/pdf;Snapshot:/home/vandal/Zotero/storage/WM9CYGVE/aa18346-11.html:text/html},
}

